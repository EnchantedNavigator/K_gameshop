@model IEnumerable<PepegaRequiem.Models.Game>

@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<p>
    @Html.ActionLink("Create New", "AddGame")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Category
        </th>
        <th>
            Developer
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Developer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditGame", new { id = item.GameId }) |
            @Html.ActionLink("Details", "DetailsGames", new { id = item.GameId }) |
            @Html.ActionLink("Delete", "DeleteGame", new { id = item.GameId })
        </td>
    </tr>
}

</table>
